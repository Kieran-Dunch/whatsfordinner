<%= simple_form_for @recipe do |f|%>
  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <div class="form-inputs">
    <%= f.input :description %>
  </div>
  <div class="form-inputs">
    <%= f.input :prep_time %>
  </div>
  <div class="form-inputs">
    <%= f.input :instructions %>
  </div>
  <div class="form-inputs">
    <%= f.input :ingredients %>
  </div>
  <div class="form-inputs">
    <%= f.input :category %>
  </div>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to "Home", root_path %>
