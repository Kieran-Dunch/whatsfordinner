<% if request.fullpath == "/my-cookbook" %>
  <div class="d-flex justify-content-center">
    <%= link_to "ADD A RECIPE +", recipes_new_path, class:"add-recipe-button" %>
  </div>
<% end %>
<% if user_recipes.length > 0 %>
  <div class="container container-bg-white">
    <div class="cookbook-card-container">
      <% user_recipes.each do |user_recipe| %>
      <% recipe = user_recipe.recipe %>
        <div class="cookbook-recipe-card">
          <% if @user == current_user %>
            <%= link_to my_cookbook_recipe_path(user_recipe) do%>
              <%= render "shared/recipe_card", recipe: recipe, user_recipe: user_recipe %>
            <% end %>
          <% else %>
            <%= link_to cookbook_recipe_path(user_recipe) do%>
              <%= render "shared/recipe_card", recipe: recipe, user_recipe: user_recipe %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render "shared/no_content", excuse: "no recipes yet" %>
<% end %>

