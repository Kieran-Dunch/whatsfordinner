<div class="modal fade" id="modal-<%= @recipe.id %>" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle"><%= @recipe.title %></h5>
        <%= cl_image_tag @recipe.photo.key, height: 100, width: 200, crop: :lfill  %>
      </div>
      <div class="recipe-attributes d-flex container justify-content-around">
        <p>Prep-time: <%= @recipe.prep_time %></p>
        <p><%= @recipe.serving_size %></p>
      </div>
      <div class="modal-body">
        <p><%= @recipe.description %></p>
      </div>
      <div class="modal-footer d-flex justify-content-end align-items-end">
        <button type="button" class="btn btn-top-10"><%= link_to "Show more", cookbook_recipe_path(user_recipe)%></button>
      </div>
    </div>
  </div>
</div>
