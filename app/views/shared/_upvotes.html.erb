<div class="d-flex" data-controller="upvotes" data-upvotes-recipe-value=<%=@recipe.id%>>
  <h4 data-upvotes-target="count"><%= pluralize @recipe.upvotes.count, "upvote" %></h4>
  <% upvote = Upvote.where(user_id: current_user.id, recipe_id: @recipe.id).first %>
  <% if !upvote %>
    <a data-upvotes-target="submit" data-action="click->upvotes#vote"> upvote </a>
  <% end %>
</div>
